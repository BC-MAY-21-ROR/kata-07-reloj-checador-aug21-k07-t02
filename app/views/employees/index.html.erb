<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>id#</th>
      <th>Email</th>
      <th>Name</th>
      <th>Position</th>
      <th>Private number</th>
      <th>Active</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.email %></td>
        <td><%= employee.name %></td>
        <td><%= employee.position %></td>
        <td><%= employee.private_number %></td>
        <td><%= employee.active %></td>
        <td><%= employee.store.name %></td>
        <td><%= link_to 'Show', admin_employee_url(Admin.current_admin, employee) %></td>
        <td><%= link_to 'Edit', edit_admin_employee_path(Admin.current_admin, employee) %></td>
        <td><%#= link_to 'Destroy', employee_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

